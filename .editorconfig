# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100
end_of_line = lf
charset = utf-8

[*.json]
indent_size = 2
insert_final_newline = ignore

[*.yml]
indent_size = 2

[*.html]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
